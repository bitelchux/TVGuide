<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.botijonline.TVGuide"
        version   = "3.0.0">
    <name>Tv Listings USA</name>

    <description>
      Usa Tv listings and guide, by hour, by channel, by genre... with favourite list and time zone selection...and FREE!
    </description>
    <author href="http://bitelchux.com" email="bitelchux@gmail.com">
        bitelchux
    </author>
  <icon src="icon.png" />
<icon src="icon-57.png" width="57" height="57" />
<icon src="icon-72.png" gap:platform="ios" width="72" height="72" />

  <gap:splash src="splash.png" />
  <access origin="*" />
  <preference name="target-device" value="universal" />
  
  <preference name="permissions" value="none"/>
    <feature name="http://api.phonegap.com/1.0/network" />
  <preference name="stay-in-webview" value="true" />
    <preference name="phonegap-version" value="2.0.0" />
    <preference name="orientation"      value="default" />    
    <preference name="fullscreen"       value="true" />

    <icon src="icon.png" />
</widget>
